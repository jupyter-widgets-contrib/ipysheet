{
"compilerOptions": {
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "lib": ["dom", "es2015"],
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "lib",
    "rootDir": "src",
    "skipLibCheck": true,
    "strictNullChecks": false,
    "inlineSourceMap": true
  },
  "include": [
      "./src/**/*",
  ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts"
  ]
}
